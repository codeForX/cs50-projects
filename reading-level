 # include <cs50.h>
 # include<stdio.h>
 # include <math.h>

void grader(string str);

int main(void)
{
  string str = get_string("enter input to be tested: ");
 grader(str);
}


void grader(string str)
{
  int letter_num = 0;
  int sentence_num =0;
  int word_num = 1;
  for(int i=0;str[i] != '\0';i++)
   {
      if( (int)str[i] <= 122 && (int)str[i] >= 65)
       {
          letter_num++;
          if(str[i - 1] == ' ')
          {
              word_num ++;
          }

       }
       else if(str[i] == '.'||str[i] == '?'|| str[i] == '!')
       {
           sentence_num++;
       }
   }
   int grade = round((0.0588 * (float)letter_num/word_num*100 - 0.296 *(float) sentence_num/word_num*100 - 15.8));
   if(grade < 1)
   {
    printf("Before Grade 1");
   }
   else if(grade >= 16)
   {
    printf("Grade 16+");
   }
   else
   {
    printf("Grade %i", grade);
   }
}
